<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="630dp"
    android:layout_gravity="center"
    android:background="@drawable/radius_10"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/finish_hiking_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:text="@string/dialog_result_title"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <WebView
        android:id="@+id/finish_hiking_result_webview"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/finish_hiking_result_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_primary_background"
            android:elevation="2dp"
            android:text="@string/button_ok"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


