<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/radius_10"
    android:elevation="4dp"
    android:gravity="center"
    android:minWidth="350dp"
    android:minHeight="250dp"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingTop="35dp"
    android:paddingRight="35dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/select_hiking_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/select_hiking_question"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />

    <android.widget.Button
        android:id="@+id/meetup_hiking_start_btn"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_margin="9dp"
        android:background="@drawable/dialog_button_primary_background"
        android:elevation="2dp"
        android:padding="5dp"
        android:text="@string/select_hiking_group"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.widget.Button
        android:id="@+id/individual_hiking_start_btn"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/dialog_button_secondary_background"
        android:elevation="2dp"
        android:padding="5dp"
        android:text="@string/select_hiking_individual"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
