<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.hikingdom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@font/applesdgothicneoregular</item>
        <item name="buttonStyle">@font/applesdgothicneoregular</item>
        <item name="editTextStyle">@font/applesdgothicneoregular</item>
        <item name="radioButtonStyle">@font/applesdgothicneoregular</item>
        <item name="checkboxStyle">@font/applesdgothicneoregular</item>
        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/applesdgothicneoregular</item>
    </style>


</resources>